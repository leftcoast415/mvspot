<p id="notice"><%= notice %></p>

<div style="float:right">
<%= render 'album_form' %>
</div>
<br>
<center style="margin-right: 20%">
<h1><%= @artist.artist_name %></h1>
<br>

<p>
  <%= image_tag(@artist.artist_photo, size: "560") %>
</p>

<p>
  <%= raw(@artist.artist_video) %>
</p>
<br><h1><u>Discography</u></h1><br>
<% @artist.albums.each do |album| %>
  <% if album.id %>
    <h2><%= link_to (album.title) + ' (' + (album.release_date.to_date.year.to_s) + ')', artist_album_path(@artist, id: "#{album.id}") %></h2>
    <%= link_to image_tag(album.avatar), artist_album_path(@artist, id: "#{album.id}") %>           
    
  <% end %>
<% end %>
<br>
<%= link_to 'Edit', edit_artist_path(@artist) %> |
<%= link_to 'Back', artists_path %>
</center>
